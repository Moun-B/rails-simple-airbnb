<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
       <p>All <%= pluralize(@flats.count, "flat")%>.</p>
    </div>
  </div>
  <% @flats.each do |flat| %>
  <div class="d-flex gap-4">
      <div>
        <div class="flat-card">
          <% if flat.picture_url.nil? || flat.picture_url.empty? %>
           <div>
            <%= image_tag "https://images.unsplash.com/photo-1554995207-c18c203602cb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80", class: "flat-card-image" %>
           </div>
          <% else %>
            <div>
              <%= image_tag flat.picture_url, class: "flat-card-image" %>
            </div>
          <% end %>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "More info", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat), class: "ms-3 text-warning"  %>
            <%= link_to "Remove", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'card-action card-edit ms-3 text-danger' %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>
